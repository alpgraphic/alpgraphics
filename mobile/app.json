{
  "expo": {
    "name": "alpgraphics",
    "slug": "alpgraphics",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#f5f3e9"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.alpgraphics.client",
      "buildNumber": "1",
      "infoPlist": {
        "NSFaceIDUsageDescription": "Hızlı giriş için Face ID kullanın",
        "NSCameraUsageDescription": "Fotoğraf çekmek için kamera erişimi gereklidir",
        "NSPhotoLibraryUsageDescription": "PDF ve dosya paylaşımı için galeri erişimi gereklidir",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#f5f3e9"
      },
      "package": "com.alpgraphics.client",
      "versionCode": 1,
      "permissions": [
        "USE_BIOMETRIC",
        "USE_FINGERPRINT",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "SCHEDULE_EXACT_ALARM",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-game-center",
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Hızlı giriş için Face ID kullanın"
        }
      ],
      "expo-secure-store",
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#a62932",
          "defaultChannel": "default",
          "sounds": []
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "3664a97e-8ab0-4f3e-8507-f21e6d993539"
      }
    }
  }
}